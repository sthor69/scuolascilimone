<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/meteo_list_image"
        android:layout_width="0dp"
        android:contentDescription="@string/meteo_image_description"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:src="@drawable/fixed_spinner" />

    <LinearLayout
        android:id="@+id/meteo_list_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/meteo_list_min_temp_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/meteo_list_min_temp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_list_min_temp_label" />

            <TextView
                android:id="@+id/meteo_list_min_temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/meteo_list_max_temp_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/meteo_list_max_temp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_list_max_temp_label" />

            <TextView
                android:id="@+id/meteo_list_max_temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/meteo_list_humidity_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/meteo_list_humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_list_humidity_label" />

            <TextView
                android:id="@+id/meteo_list_humidity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/meteo_list_precipit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/meteo_list_precipit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meteo_list_precipit_label" />

            <TextView
                android:id="@+id/meteo_list_precipit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/meteo_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/meteo_day_of_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:gravity="center_horizontal"/>
        
        <TextView 
            android:id="@+id/meteo_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>